

# some newline before beginning of document
# another comment

bool  = true
str1  = literal
str2  = "quoted"
int   = 100
float = 1.2

index = [
  1,
  true,
  false,
  1.2,
  1 + 1,
  "string"
][5]

base_dir = '/usr/share/doc'

files {
  readme {
    path = "$base_dir/readme"
  }
  licence {
    path = "$base_dir/licence"
  }
  mail = "noreply@@fig.org"
}

expr {
  int = 100 + 1
  neg = -100
	div = 500 / 100
}

compare {
	lt  = 100 < 1_000
	gt  = 100 > 1_000
	eq  = $lt == $gt
	ne  = $lt != $gt
	not = !$eq
}

unit {
  si  = 1K
  iec = 1k
}

times {
  date  = 2021-05-07
  time1 = 19:06:47
  time2 = 19:06:47.123
  time3 = 19:06:47.123456
  time4 = 19:06:47.123456789
  dt1   = 2021-05-07T19:06:47Z
  dt2   = 2021-05-07 19:06:47Z
  dt3   = 2021-05-07 19:06:47-00:00
  dt4   = 2021-05-07 19:06:47.123Z
  dt5   = 2021-05-07 19:06:47.123456Z
  dt6   = 2021-05-07 19:06:47.123456789Z
}

