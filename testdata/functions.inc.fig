functions {
	sqrt  = sqrt(4)
	upper = upper($str1)
	lower = lower($upper)
	max   = max(1, 9, 4, 7)
	min   = min(1, 1, 0, -1)
	replace = $lower != $upper ? replace("foobar", "oo", "OO") : ""
}

user_defined {
	sayHello() {
		return "hello world"
	}

	addInt(x, y) {
		return x + y
	}

	cond(bool) {
		if (bool) {
			return bool
		} else {
			return bool
		}
	}

	loop(until) {
		let i = 0
		while (i < until) {
			i += 1
		}
		return i
	}

	check_file(file) {
		return isfile(file)
	}

	loop2() {
		let i = 0
		while (i < 100) {
			if (i > 0 && i % 3 == 2) {
				i += 1
				continue
			}
			if (i >= 50) {
				break
			}
			i += 2
		}
		i + 1 # same as return i + 1
	}

	loop3(arr) {
		let i = 0
		foreach(item in arr) {
			i += item
		}
		return i
	}

	hello = sayHello()
	add   = addInt(10, 20)
	bool1 = cond(yes)
	bool2 = cond(no)
	until = loop(10)
	ctrl  = loop2()
	each  = loop3([1, 2, 3])
	exists = check_file("testdata/main.fig")
}
