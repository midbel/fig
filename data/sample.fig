section compare {
	eq  = 1 == 1
	ne  = 1 != 1
	gt  = 1 > 1
	lt  = 1 < 1
	ge  = 1 >= 1
	le  = 1 <= 1
	not = !(1 >= 1)
}

section variables {
	local = $local
	env   = @env
}

section relations {
	and = true && false
	or  = true || false
}

section arithmetic {
	binand = 1 & 1
